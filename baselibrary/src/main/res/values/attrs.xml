<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CustomToolBar attrs-->
    <declare-styleable name="CustomToolBar">
    <attr name="titleText" format="string"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>

    <attr name="rightText" format="string"/>
    <attr name="rightTextColor" format="color"/>
    <attr name="rightImage" format="reference"/>
    <attr name="rightTextSize" format="dimension"/>
    <attr name="rightImageWidth" format="dimension"/>
    <attr name="rightImageHeight" format="dimension"/>
    <attr name="rightShow" format="boolean"/>
    <attr name="rightShowView" >
        <enum name="image" value="0"/>
        <enum name="text" value="1"/>
    </attr>
    <attr name="leftText" format="string"/>
    <attr name="leftTextColor" format="color"/>
    <attr name="leftImage" format="reference"/>
    <attr name="leftTextSize" format="dimension"/>
    <attr name="leftImageWidth" format="dimension"/>
    <attr name="leftImageHeight" format="dimension"/>
    <attr name="leftShow" format="boolean"/>
    <attr name="leftShowView" >
        <enum name="image" value="0"/>
        <enum name="text" value="1"/>
    </attr>
    </declare-styleable>
</resources>
